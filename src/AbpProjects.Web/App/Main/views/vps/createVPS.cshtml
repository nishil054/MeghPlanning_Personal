<form id="frm_create_vps" name="vpsCreateForm" novalidate>
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>@L("CreateNewVPS")</span>
        </h4>
    </div>
    <div class="modal-body">




        <div class="row clearfix">
            <div class="col-sm-6">
                <div class="form-group form-float">
                     <label for="title" class="form-label">@L("Title")<span class="abp_required"
                                style="color:red">*</span></label>
                    <div class="form-line focused">
                        <input id="title" type="text" name="title" ng-model="vm.vps.title" required
                            @*ng-pattern="/^[a-zA-Z0-9 -]*$/"*@ class="validate form-control" />
                       
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                     <label for="ip" class="form-label">@L("IP")<span class="abp_required"
                                style="color:red">*</span></label>
                    <div class="form-line focused">
                        <input id="ip" type="text" name="ip" ng-model="vm.vps.ip" maxlength="256"
                            class="validate form-control">
                       
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                     <label for="username" class="form-label">@L("UserName")<span class="abp_required"
                                style="color:red">*</span></label>
                    <div class="form-line focused">
                        <input id="username" type="text" name="UserName" ng-model="vm.vps.userName" required
                            @*ng-pattern="/^[a-zA-Z0-9 -]*$/"*@ minlength="2" class="validate form-control">
                       
                    </div>
                </div>
            </div>
             <div class="col-sm-6">
                <div class="form-group form-float">
                      <label for="password" class="form-label">@L("Password")<span class="abp_required" style="color:red">*</span></label>
                    <div class="form-line">
                        <input id="password" type="text" name="Password" ng-model="vm.vps.password" required class="validate form-control">
                      
                    </div>
                </div>
            </div>
              <div class="col-sm-12">
                <div class="form-group form-float">
                     <label for="comment" class="form-label">@L("Comment")</label>
                    <div class="form-line">

                        <textarea id="comment" name="Comment" class="validate form-control" ng-model="vm.vps.comment" ></textarea>
                        @*<input id="comment" type="text" name="Comment" class="validate form-control" ng-model="vm.vps.comment">*@
                       
                    </div>
                </div>
            </div>
        </div>




    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            @L("Cancel")
        </button>
        <button type="submit" class="btn btn-primary waves-effect" ng-click="vm.save()"
            ng-disabled="vpsCreateForm.$invalid || vm.loading">
            @L("Save")
        </button>
    </div>

</form>