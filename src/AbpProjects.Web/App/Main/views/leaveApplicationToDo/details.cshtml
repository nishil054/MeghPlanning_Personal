<form id="frm_details_leaveapplicationtodo" novalidate>
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>@L("Details")</span>
        </h4>
    </div>
    <div class="modal-body">

        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <label class="form-label"><b>Employee Name</b></label><br />
                    <p class="form-label form-control">{{vm.leaveapplicationtodo[0].userName}}</p>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <label class="form-label"><b>Type of Leave</b></label><br />
                    <p class="form-label form-control">{{vm.leaveapplicationtodo[0].leaveTypeName}}</p>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <label class="form-label"><b>Leave Status</b></label><br />
                    <p class="form-label form-control">{{vm.leaveapplicationtodo[0].leaveStatusName}}</p>

                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <label class="form-label"><b>From Date</b></label><br />
                    <p class="form-label form-control">{{vm.leaveapplicationtodo[0].fromDate | date:'dd/MM/yyyy'}}</p>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <label class="form-label"><b>To Date</b></label><br />
                    <p class="form-label form-control">{{vm.leaveapplicationtodo[0].toDate | date:'dd/MM/yyyy'}}</p>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <label class="form-label"><b>Reason</b></label><br />
                    <p class="form-label form-control">{{vm.leaveapplicationtodo[0].reason}}</p>

                </div>
            </div>

        </div>


    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            @L("Cancel")
        </button>

    </div>
</form>