
<form id="frm_history" name="historyForm" novalidate>
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            @L("RenewHistory") 
        </h4>
        <div class="search_container">
            <ul>
                <li>


                </li>
            </ul>
        </div>

    </div>

    <div class="body table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Service</th>
                    <th>Price</th>
                    <th>Created On</th>
                    @*<th>Registration Date</th>*@
                    <th>Renewal Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="h in vm.history">
                    <td>{{h.serviceName}}</td>
                    <td ng-hide="h.actionName=='Adjustment'">{{h.amount}}</td>
                    <td ng-if="h.actionName=='Adjustment' ">{{h.adjustmentAmount}}</td>
                    <td>{{h.createdOn |date:"dd/MM/yyyy"}}</td>
                    @*<td>{{h.registrationDate |date:"dd/MM/yyyy"}}</td>*@
                    <td>{{h.nextRenewalDate |date:"dd/MM/yyyy"}}</td>
                    <td>{{h.actionName}}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            @L("Cancel")
        </button>
    </div>
</form>



