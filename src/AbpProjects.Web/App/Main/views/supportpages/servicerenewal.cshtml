<div class="row clearfix" ng-controller="app.views.supportpages.servicerenewal as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header data_section">
                <h2>
                    Service Renewal
                </h2>
            </div>
            <div class="col-md-12" ng-show="dom">
                <div ng-if="dom==true && vm.chcksupportpermission()==true">
                    <div class="card-design">
                        <div class="card-header">
                            <h4>
                                Service Renewal Reminder (Within 60 days)
                            </h4>
                        </div>
                        <div class="card-body">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th class="text-center" ng-show="vm.permissions.supportadminwrites">Actions</th>
                                        <th>Domain Name</th>
                                        <th>Client</th>
                                        <th>Service Detail</th>
                                        <th>Price</th>
                                        <th>Account Manager</th>
                                        <th>Renewal Date</th>


                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="task in vm.tasks" ng-style="{'background':(task.actionstatus==4) ? '#baffcf' : (vm.checkDate(task.nextRenewalDate)==false) ? '#ffd0d0' : '' }">
                                        <td class="dropdown text-center align-middle" ng-show="vm.permissions.supportadminwrites">
                                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown"
                                               role="button" aria-haspopup="true" aria-expanded="false">
                                                <i class="material-icons">more_vert</i>
                                            </a>
                                            <ul class="dropdown-menu pull-right">

                                                <li>
                                                    <a href="javascript:void(0);" class="waves-effect waves-block"
                                                       ng-if="task.actionstatus==4"
                                                       ng-click="vm.openServiceEditModal(task)">
                                                        <i class="material-icons">create</i>Renew
                                                    </a>
                                                </li>

                                                <li>
                                                    <a href="javascript:void(0);" class="waves-effect waves-block"
                                                       ng-if="task.actionstatus!=4" ng-click="vm.opensaveAsConfirmModal(task)">
                                                        <i class="material-icons">create</i>Mark As Confirm
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="javascript:void(0);" class="waves-effect waves-block"
                                                       ng-click="vm.save(task)">
                                                        <i class="material-icons">delete_sweep</i>@L("Cancel")
                                                    </a>
                                                </li>

                                            </ul>
                                        </td>


                                        <td><i ng-if="task.isAutoRenewal==true" style="color:green" class="fa fa-refresh" aria-hidden="true"></i> {{task.domainName}} </td>
                                        <td>{{task.clientName}}</td>

                                        <td class="specal1 gridcolumn">

                                            <div ng-if="task.hostingSpace!=null">
                                                <b>Storage Space:</b><span ng-if="task.hostingSpace!=null">{{task.hostingSpace}} </span>
                                            </div>

                                            <div ng-if="task.displayTypename1 != null">
                                                <b>
                                                    Type
                                                    Name:
                                                </b><span>{{task.displayTypename1}} </span>
                                            </div>
                                            <div ng-if="task.noOfEmail!=null">
                                                <b>No of email:</b><span>
                                                    {{task.noOfEmail}}
                                                </span>
                                            </div>
                                            <div ng-if="task.typeofssl!=null">
                                                <b>Type Of SSL:</b><span>
                                                    {{task.typeofssl}}
                                                </span>
                                            </div>
                                            <div ng-if="task.databaseSpace!=null">
                                                <b>Database Space:</b><span ng-if="task.databaseSpace!=null">{{task.databaseSpace}} </span>
                                            </div>
                                            <div ng-if="task.title!=null">
                                                <b>Title:</b><span>
                                                    {{task.title}}
                                                </span>
                                            </div>
                                            <div ng-if="task.serviceName!=null">
                                                <b>Service :</b><span>
                                                    {{task.serviceName}}
                                                </span>
                                            </div>
                                            <div ng-if="task.credits!=null">
                                                <b>Credits :</b><span>
                                                    {{task.credits}}
                                                </span>
                                            </div>
                                        </td>
                                        <td @*class="text-center" *@>{{task.price}}</td>
                                        <td>{{task.employeeName}}</td>
                                        @*
                                        <td>
                                            <span ng-if="task.status==0" class="badge badge-success">Active </span>
                                            <span ng-if="task.status==1" class="badge badge-danger"> Cancel </span>
                                        </td>*@

                                        <td>{{task.nextRenewalDate | date:'dd/MMM/yyyy'}}</td>

                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            

            @*<div ng-if="noData" class="alert alert-info">
                No record found.
            </div>
            <div class="body table-responsive">
                <div ui-grid="vm.userGridOptions" ui-grid-pagination ui-grid-resize-columns
                     full-height-grid dir="ltr" ng-if="!noData">
                </div>
            </div>*@
        </div>
    </div>
</div>
<style>
    .data_section {
        position: relative;
        z-index: 9;
    }

    .angucomplete-dropdown {
        max-width: 278px !important;
    }
</style>
