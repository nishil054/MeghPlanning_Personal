<div class="row clearfix" ng-controller="app.views.project.view as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header data_section">
                <h2>
                    Project Details
                    
                </h2>
                <div >
                        <ul>

                            <li>


                                <a style="color:#fff" class="btn btn-default btn_flex waves-effect" href="javascript:history.back()"><i class="fa fa-angle-left" aria-hidden="true"></i> @L("Back")</a>
                            </li>


                        </ul>
                    </div>

            </div>

            <div class="padd_top">
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong>  Company</strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.data.companyName}}
                                </span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong> Project Name</strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.data.projectName}}
                                </span>
                            </label>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong> Project Description</strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.data.description}}
                                </span>
                            </label>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong>
                                        Start Date
                                    </strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.data.startDate|date:'dd/MM/yyyy'}}
                                </span>
                            </label>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong>
                                        End Date
                                    </strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.data.endDate|date:'dd/MM/yyyy'}}
                                </span>
                            </label>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong>
                                        Team Dead line
                                    </strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.data.teamDeadline|date:'dd/MM/yyyy'}}
                                </span>
                            </label>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong> Actual End Date</strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.data.actualEndDate|date:'dd/MM/yyyy'}}
                                </span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong> Price  </strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.data.price}}
                                </span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong> Total Hours  </strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.data.totalhours}}
                                </span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong>
                                        Client
                                    </strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.data.clientName}}
                                </span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong> Marketing Leader</strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.data.marketing_LeaderName}}
                                </span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="body table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Project Type</th>
                                <th class="text-right">Price</th>
                                <th class="align-center">Hours</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="proj in vm.projectDetails">
                                <td width=70%>{{proj.projectType}}</td>
                                <td class="align-right" width=110>{{proj.typeprice}}</td>
                                <td class="align-center">{{proj.hours}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
