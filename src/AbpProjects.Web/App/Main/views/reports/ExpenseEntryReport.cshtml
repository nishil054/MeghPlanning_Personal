
<div class="row clearfix" ng-controller="app.views.reports.expenseEntryReport as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2 class="displyflex">
                    <span>Expense Report</span>
                </h2>
            
            <div class="data_section headerbox">
                <ul>
                    <li style="margin-right:0px;">
                        <span class="badgebox"> Financial Year ({{vm.financyear}}) </span> @*<span class="badgebox">Sales  : {{vm.totalFinancialYrsales}}</span>*@
                    </li>

                    <li class="dropdown">
                        <select id="ddlcom1" class="form-control">
                            @*<option ng-repeat="st in vm.years1" value="{{st}}">{{st}}</option>*@
                        </select>
                    </li>

                    <li>
                        <button type="button" class="btn btn-primary" ng-click="vm.refreshGrid()"><i class="fa fa-search" aria-hidden="true"></i></button>
                    </li>
                    <li>
                        <button type="button" class="btn btn-primary" ng-click="vm.clear()"><i class="fa fa-refresh" aria-hidden="true"></i></button>
                    </li>
                </ul>
            </div>
            </div>

            <div ng-if="noData" class="alert alert-info">
                No record found.
            </div>

            <div class="body table-responsive">
                 <div>
                     <table class="table table-hover table-striped fnt_normal td_middal width600" ng-if="!noData">
                         <tr>
                             <td>Category</td>
                             <td ng-repeat="itemval1 in  vm.monthyear">
                                 {{itemval1}}
                             </td>
                         </tr>
                         <tbody ng-repeat-start="d in data">
                             <tr>
                                 <td>
                                     <a ng-click="d.isCollapsed=!d.isCollapsed">{{d.category}}</a>
                                 </td>
                                 <td ng-repeat="ex in d.months">
                                     <span>{{ex.expense}}</span>
                                 </td>
                             </tr>
                         </tbody>
                         <tbody ng-repeat-end ng-show="d.isCollapsed">
                             <tr>
                                 <th>sub category</th>
                                 <th> </th>
                             </tr>
                             <tr>
                             <tr ng-repeat=" ex in d.subcatdetaillist">
                                 <td>
                                     <span>{{ex.subcategory}}</span>
                                     @*<span>{{ex.st}}</span>*@
                                 </td>
                                 <td ng-repeat="s in ex.st track by $index">
                                     <span ng-if="s.amount!=null">{{s.amount}}</span>
                                     <span ng-if="s.amount==null">0</span>
                                 </td>

                             </tr>
                            
                         </tbody>
                         <tfoot>
                             <tr>  
                                 
                                 <td   ng-repeat="itemval in vm.totalFinancialYrsales" style="text-align:left">
                                     {{itemval.amount}}
                                 </td>
                             </tr>
                         </tfoot>
             </table>
        </div>


