<div class="row clearfix" ng-controller="app.views.reports.opportunityDetails as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header data_section">
                <h2>
                    Opportunity Details
                </h2>
                <div>
                    <ul>
                        <li>
                            <a style="color:#fff" class="btn btn-default btn_flex waves-effect" href="javascript:history.back()"><i class="fa fa-angle-left" aria-hidden="true"></i> @L("Back")</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="padd_top">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong>Company</strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.opportunity.companyName}}</span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong> Person Name</strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.opportunity.personName}}
                                </span>
                            </label>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong> Mobile Number</strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.opportunity.mobileNumber}}
                                </span>
                            </label>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong> Email Id </strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.opportunity.emailId}}
                                </span>
                            </label>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong> @L("InterestedIn") </strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">

                                : <span>{{inter(vm.opportunity.projectType_Name)}}</span>{{projType}}
                            </label>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong> Call Category </strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.opportunity.callCategoryName}} {{vm.commas}}
                                </span>
                            </label>
                        </div>
                    </div>

                </div>
                <div class="row" style="display:none">
                    <div class="col-lg-3 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong> Assign Users </strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.opportunity.assignUserName}}
                                </span>
                            </label>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                <span>
                                    <strong> Comment </strong>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-6">
                        <div class="form-group">
                            <label class="form-label">
                                : <span>
                                    {{vm.opportunity.comment}}
                                </span>
                            </label>
                        </div>
                    </div>

                </div>
                <div class="body table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th width="100">Created On</th>
                                <th width="100">Call Category</th>
                                <th width="450">Interested In</th>
                                <th width="120">Next Action Date</th>
                                @*<th width="100">Closing Date</th>*@
                                <th>Comment </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="h in vm.followuphistory track by $index">
                                <td>{{h.creationDate | date:"dd/MM/yyyy"}}</td>
                                <td>{{h.calllCategoryName}}</td>
                                <td>{{vm.bindprojecttypename(h.projectNames)}}</td>
                                <td align="center">
                                    <span ng-if="h.nextActionDate != null">{{h.nextActionDate | date:"dd/MM/yyyy"}}</span>
                                    <span ng-if="h.nextActionDate == null"> - </span>
                                </td>
                                @*<td align="center">
                        <span ng-if="h.closingDate != null">{{h.closingDate | date:"dd/MM/yyyy"}}</span>
                        <span ng-if="h.closingDate == null"> - </span>
                    </td>*@
                                <td>
                                    <span ng-show="h.closingDate != null"><b>Closing Date: </b></span><span ng-show="h.closingDate != null">{{h.closingDate | date:"dd/MM/yyyy"}}</span>
                                    <div><span>{{h.comment}}</span></div>

                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>    
</div>
       