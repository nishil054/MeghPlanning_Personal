
<div class="row clearfix" ng-controller="app.views.sales.invoiceReport as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2 class="displyflex">
                    <span>Invoice Report</span>
                </h2>
            
            <div class="data_section headerbox">
                <ul>
                    <li>
                        <span class="badgebox">Financial Year ({{vm.financyear}})</span> <span class="badgebox">Payment Received  : {{vm.totalFinancialYrsales}}</span>
                    </li>
                    &nbsp;&nbsp;&nbsp;
                    <li class="dropdown">
                        <select id="ddlcom1" class="form-control">
                            @*<option ng-repeat="st in vm.years1" value="{{st}}">{{st}}</option>*@
                        </select>
                    </li>

                    <li>
                        <button type="button" class="btn btn-primary" ng-click="vm.refreshGrid()"><i class="fa fa-search" aria-hidden="true"></i></button>
                    </li>
                    <li>
                        <button type="button" class="btn btn-primary" ng-click="vm.clear()"><i class="fa fa-refresh" aria-hidden="true"></i></button>
                    </li>
                </ul>
            </div>
</div>

            <div class="body table-responsive">

                @**********************************************************@
                <table class="table table-hover table-striped fnt_normal td_middal width600">
                    <thead>
                        <tr>
                            <td ng-repeat="itemval1 in  vm.salesData">
                                {{itemval1.monthYear}}
                            </td>
                        </tr>
                    </thead>
                    <tbody id="tblSalesData">
                        <tr>
                           
                            <td ng-repeat="itemval in vm.salesData">
                                <div ng-repeat="itemval2 in itemval.mInoiceReport" ng-if="itemval2.clientName != null "> {{ itemval2.clientName}} -  {{ itemval2.totalbillamount}}</div>
                                <div ng-if="itemval.mInoiceReport.length==0"> - </div>
                            </td>
                           
                        </tr>
                        <tr>
                          
                            <td ng-repeat="itemval in vm.salesData" >
                                {{ itemval.totalYearsales}}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>


    </div>
</div>

































