<form id="frm_details_opportunity" novalidate>
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>@L("Opportunity") @L("Details") </span>
        </h4>

    </div>
    <div class="modal-body">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card main-content">
                    <div class="padd_top">
                        <div class="row">
                            <div class="col-lg-4 col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        <span>
                                            <strong>  Company</strong>
                                        </span>
                                    </label>
                                </div>
                            </div>

                            <div class="col-lg-8 col-md-9 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        : <span>
                                            {{vm.opportunity.companyName}}
                                        </span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        <span>
                                            <strong> Company Beneficiary</strong>
                                        </span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-md-9 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        : <span>
                                            {{vm.opportunity.beneficiaryCompany}}
                                        </span>
                                    </label>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        <span>
                                            <strong> Person Name</strong>
                                        </span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-md-9 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        : <span>
                                            {{vm.opportunity.personName}}
                                        </span>
                                    </label>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        <span>
                                            <strong> Mobile Number</strong>
                                        </span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-md-9 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        : <span>
                                            {{vm.opportunity.mobileNumber}}
                                        </span>
                                    </label>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        <span>
                                            <strong> Email Id </strong>
                                        </span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-md-9 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        : <span>
                                            {{vm.opportunity.emailId}}
                                        </span>
                                    </label>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        <span>
                                            <strong> @L("InterestedIn") </strong>
                                        </span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-md-9 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">

                                        : <span>{{inter(vm.opportunity.projectType_Name)}}</span>

                                        <!--: <span ng-repeat="projType in  vm.opportunity.projectType_Name">
                                        {{projType}}-->
                                        @*<br />&nbsp;*@
                                        <!--</span>-->
                                    </label>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        <span>
                                            <strong> Call Category </strong>
                                        </span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-md-9 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        : <span>
                                            {{vm.opportunity.callCategoryName}} {{vm.commas}}
                                        </span>
                                    </label>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        <span>
                                            <strong> Follow Up Type </strong>
                                        </span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-md-9 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        : <span>
                                            {{vm.opportunity.followUpType}}
                                        </span>
                                    </label>
                                </div>
                            </div>

                        </div>
                        <div class="row" style="display:none">
                            <div class="col-lg-4 col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        <span>
                                            <strong> Assign Users </strong>
                                        </span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-md-9 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        : <span>
                                            {{vm.opportunity.assignUserName}}
                                        </span>
                                    </label>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        <span>
                                            <strong> Comment </strong>
                                        </span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-md-9 col-sm-6">
                                <div class="form-group">
                                    <label class="form-label">
                                        : <span>
                                            {{vm.opportunity.comment}}
                                        </span>
                                    </label>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="body table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th width="100">Created On</th>
                                    <th width="100">Call Category</th>
                                    <th width="160">Follow Up Type</th>
                                    <th width="450">Interested In</th>
                                    <th width="120">Next Action Date</th>
                                    <th>Comment </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="h in vm.followuphistory track by $index">
                                    <td align="center">{{h.creationDate | date:"dd/MM/yyyy"}}</td>
                                    <td>{{h.calllCategoryName}}</td>
                                    <td>{{h.followUpType}}</td>
                                    <td>{{vm.bindprojecttypename(h.projectNames)}}</td>
                                    <td align="center">
                                        <span ng-if="h.nextActionDate != null">{{h.nextActionDate | date:"dd/MM/yyyy"}}</span>
                                        <span ng-if="h.nextActionDate == null"> - </span>
                                    </td>
                                    <td>
                                        <span ng-show="h.closingDate != null"><b>Closing Date: </b></span><span ng-show="h.closingDate != null">{{h.closingDate | date:"dd/MM/yyyy"}}</span>
                                        <div><span>{{h.comment}}</span></div>

                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</form>
