<div class="row clearfix padd20">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header data_section">
                <h2>
                    @L("UserStoryList")
                </h2>
                <div>
                    <button type="button" class="close" ng-click="vm.close()" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
            <p ng-if="noData" class="alert alert-danger paddtop"> No record found.</p>
            <div class="body table-responsive">
                <div ui-grid="vm.userGridOptions" ui-grid-pagination ui-grid-resize-columns full-height-grid dir="ltr"
                     ng-if="!noData"></div>
            </div>
        </div>
    </div>
</div>
