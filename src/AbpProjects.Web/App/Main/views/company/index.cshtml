<div class="row clearfix" ng-controller="app.views.company.index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header data_section">
                <h2>
                    @L("BeneficialCompanyDetails")
                </h2>
                <div>
                    <ul>
                        <li>
                            <input type="text" ng-model="vm.searchBox" class="validate form-control" placeholder="Search by Company" style="height: 35px">
                        </li>
                        <li>
                            <button type="button" class="btn btn-primary" ng-click="vm.refreshGrid()" style="height: 35px"><i class="fa fa-search" aria-hidden="true"></i></button>

                        </li>
                        <li>
                            <button type="button" data-toggle="modal" class="btn btn-primary add" ng-click="vm.openCompanyCreationModal()">
                                <i class="material-icons">add</i>
                            </button>
                        </li>
                    </ul>

                </div>
            </div>
